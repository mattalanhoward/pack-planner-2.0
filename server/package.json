{
  "name": "packplanner2.0-backend",
  "version": "1.0.0",
  "description": "Backend for PackPlanner",
  "main": "src/server.js",
  "type": "commonjs",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --detectOpenHandles --runInBand --coverage"
  },
  "jest": {
    "testEnvironment": "node",
    "globalSetup": "<rootDir>/src/test/globalSetup.js",
    "globalTeardown": "<rootDir>/src/test/globalTeardown.js",
    "setupFilesAfterEnv": [
      "<rootDir>/src/test/jest-teardown.js"
    ],
    "coverageDirectory": "./coverage/",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "keywords": [
    "express",
    "mongodb",
    "mongoose",
    "jwt",
    "kanban"
  ],
  "author": "Your Name <you@example.com>",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.3.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.1.4",
    "mongodb-memory-server-core": "^10.1.4",
    "nodemon": "^2.0.22",
    "supertest": "^7.1.1"
  }
}
