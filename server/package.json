{
  "name": "packplanner2.0-backend",
  "version": "1.0.0",
  "description": "Backend for PackPlanner",
  "main": "src/server.js",
  "type": "commonjs",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --detectOpenHandles --runInBand --coverage",
    "db:ensure-indexes": "node scripts/ensure-indexes.js",
    "ingest:awin": "node scripts/ingest-awin-feed.js",
    "db:backfill-affiliate-derived:dry": "node scripts/backfill-affiliate-derived.js --dry-run",
    "db:backfill-affiliate-derived": "node scripts/backfill-affiliate-derived.js",
    "db:backfill-globalitem-itemgroupid": "node scripts/backfill-globalitem-itemGroupId.js"
  },
  "jest": {
    "testEnvironment": "node",
    "globalSetup": "<rootDir>/src/test/globalSetup.js",
    "globalTeardown": "<rootDir>/src/test/globalTeardown.js",
    "setupFilesAfterEnv": [
      "<rootDir>/src/test/jest-teardown.js"
    ],
    "coverageDirectory": "./coverage/",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "keywords": [
    "express",
    "mongodb",
    "mongoose",
    "jwt",
    "kanban"
  ],
  "author": "Your Name <you@example.com>",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cloudinary": "^1.41.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csv-parse": "^6.1.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.3.1",
    "multer": "^2.0.1",
    "multer-storage-cloudinary": "^4.0.0",
    "nodemailer": "^7.0.3",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.1.4",
    "mongodb-memory-server-core": "^10.1.4",
    "nodemon": "^2.0.22",
    "supertest": "^7.1.1"
  }
}
